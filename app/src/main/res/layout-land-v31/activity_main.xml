<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/system_accent3_200"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="109dp"
        android:layout_height="49dp"
        android:layout_marginTop="60dp"
        android:text="Res:"
        android:fontFamily="@font/text_font"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.257"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:fontFamily="@font/text_font"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.977"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.129" />

    <TableLayout
        android:layout_width="0dp"
        android:layout_height="241dp"
        android:shrinkColumns="0,1,2"
        android:stretchColumns="0,1,2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/button2"
                style="@style/buttonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="clearOnClick"
                android:text="AC" />

            <Button
                android:id="@+id/button3"
                style="@style/buttonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="clearOneOnCLick"
                android:text="C" />

            <Button
                android:id="@+id/button4"
                style="@style/buttonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="procOnClick"
                android:text="%" />

            <Button
                android:id="@+id/button5"
                style="@style/DLCbuttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="divisionOnClick"
                android:text="/" />

            <Button
                android:id="@+id/button"
                style="@style/landscapestyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="logOnClick"
                android:text="log10" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button6"
                style="@style/buttonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="sevennOnClick"
                android:text="7" />

            <Button
                android:id="@+id/button7"
                style="@style/buttonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="eightOnClick"
                android:text="8" />

            <Button
                android:id="@+id/button8"
                style="@style/buttonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="nineOnClick"
                android:text="9" />

            <Button
                android:id="@+id/button9"
                style="@style/DLCbuttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="substanceOnClick"
                android:text="X" />

            <Button
                android:id="@+id/button18"
                style="@style/landscapestyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="xOnClick"
                android:text="x!" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button10"
                style="@style/buttonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="fourOnClick"
                android:text="4" />

            <Button
                android:id="@+id/button11"
                style="@style/buttonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="fiveOnClick"
                android:text="5" />

            <Button
                android:id="@+id/button12"
                style="@style/buttonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="sixOnClick"
                android:text="6" />

            <Button
                android:id="@+id/button13"
                style="@style/DLCbuttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="minusOnClick"
                android:text="-" />

            <Button
                android:id="@+id/button19"
                style="@style/landscapestyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="sqrtOnClick"
                android:text="SQRT(X)" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="133dp">

            <Button
                android:id="@+id/button14"
                style="@style/buttonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="oneOnClick"
                android:text="1" />

            <Button
                android:id="@+id/button16"
                style="@style/buttonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="twoOnClick"
                android:text="2" />

            <Button
                android:id="@+id/button17"
                style="@style/buttonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="threeOnClick"
                android:text="3" />

            <Button
                android:id="@+id/button15"
                style="@style/DLCbuttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="plusOnClick"
                android:text="+" />

            <Button
                android:id="@+id/button20"
                style="@style/landscapestyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="setX3"
                android:text="x^3" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button21"
                style="@style/buttonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="zeroOnClick"
                android:text="0" />

            <Button
                android:id="@+id/button22"
                style="@style/buttonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="equalOnClick"
                android:text="=" />


            <Button
                android:id="@+id/button23"
                style="@style/buttonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="decimalOnClick"
                android:text="," />

            <Button
                android:id="@+id/button24"
                style="@style/DLCbuttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="equalOnClick"
                android:text="=" />

            <Button
                android:id="@+id/button25"
                style="@style/landscapestyle"
                android:onClick="setX2"
                android:text="x^2" />
        </TableRow>


    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>